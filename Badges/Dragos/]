from reportlab.graphics.shapes import Drawing, String
from reportlab.graphics import renderPM

from brother_ql.devicedependent import label_type_specs
from brother_ql import BrotherQLRaster, create_label
from brother_ql.backends.helpers import send

PRINTER = 'usb://0x04f9:0x209b'
LABEL_NAME = '62'
DPI_600 = True

#width = label_type_specs[LABEL_NAME]['dots_printable'][0] * 2     # Multiply by 2 for 600dpi
width = 500
height = 100

d = Drawing(width, height)
d.add(String(5, 5, "William Rickert", fontSize=80, fontName='Helvetica'))

qlr = BrotherQLRaster('QL-800')
create_label(qlr, renderPM.drawToPIL(d), LABEL_NAME, cut=True, dpi_600=DPI_600)
send(qlr.data, PRINTER)
